<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp"
    android:layout_margin="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="?attr/activity_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="@dimen/_10sdp"
                android:id="@+id/day_date"
                android:textStyle="bold"
                android:textColor="?attr/text_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="10-07-2022"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="friday"
                android:textStyle="bold"
                android:id="@+id/day_name"
                android:textColor="?attr/text_color"
                app:layout_constraintTop_toBottomOf="@+id/day_date"
                app:layout_constraintStart_toStartOf="@+id/day_date"
                app:layout_constraintEnd_toEndOf="@+id/day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:textColor="?attr/text_color"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="20 c"
                android:id="@+id/min_tem"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="|"
                android:id="@+id/comma"
                android:textSize="@dimen/_15ssp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@+id/min_tem"
                app:layout_constraintBottom_toBottomOf="@+id/min_tem"
                app:layout_constraintEnd_toStartOf="@+id/min_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="25 c"
                android:textStyle="bold"
                android:textColor="?attr/text_color"
                android:layout_marginEnd="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="@+id/comma"
                app:layout_constraintBottom_toBottomOf="@+id/comma"
                app:layout_constraintEnd_toStartOf="@+id/comma"
                android:id="@+id/max_tem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <GridLayout
